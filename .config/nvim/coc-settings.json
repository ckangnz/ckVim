{
  "coc.preferences.formatOnSave": true,
  "coc.preferences.enableMarkdown": true,
  "coc-swagger.enabled": true,

  "list.statusLineSegments": null,

  "lua.enable": true,
  "Lua.diagnostics.globals": ["vim"],
  "Lua.completion.callSnippet": "Both",
  "Lua.completion.requireSeparator": ".",

  "eslint.enable": true,
  "eslint.experimental.useFlatConfig": true,
  "eslint.autoFixOnSave": true,

  "typescript.format.enable": true,
  "typescript.showUnused": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  "flutter.autoOpenDevLog": true,

  "yaml.hover": true,
  "yaml.validate": true,
  "yaml.schemaStore.enable": true,
  "yaml.completion": true,
  "yaml.format.enable": true,
  "yaml.format.bracketSpacing": true,
  "yaml.format.proseWrap": "never",
  "yaml.format.singleQuote": true,

  "prettier.enable": true,
  "prettier.statusItemText": "",
  "prettier.useEditorConfig": true,

  "languageserver": {
    "csharp": {
      "command": "csharp-ls",
      "rootPatterns": ["*.sln", "*.csproj", "*.fsproj", ".git"],
      "filetypes": ["cs", "csharp"]
    }
  },

  "diagnostic.enableMessage": "always",
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "󱋴",

  "suggest.snippetsSupport": true,
  "snippets.extends": {
    "html": ["html"],
    "css": ["css"],
    "javascriptreact": ["javascript"],
    "typescriptreact": ["javascript", "javascript-jasmine-arrow"],
    "typescript": ["javascript", "javascript-jasmine-arrow"],
    "cs": ["cs"],
    "python": ["django"]
  },

  "suggest.floatConfig": {
    "maxWidth": 50,
    "border": true,
    "rounded": true,
    "shadow": false,
    "winblend": 2,
    "highlight": "CocFloating",
    "borderhighlight": "CocFloating"
  },

  "suggest.completionItemKindLabels": {
    "class": "",
    "color": "",
    "constant": "",
    "default": "",
    "enum": "",
    "enumMember": "",
    "event": "",
    "field": "",
    "file": "",
    "folder": "",
    "function": "󰊕",
    "interface": "",
    "keyword": "",
    "method": "",
    "module": "󰕳",
    "operator": "",
    "property": "",
    "reference": "",
    "snippet": "󰁨",
    "struct": "",
    "text": "",
    "typeParameter": "",
    "unit": "",
    "value": "",
    "variable": ""
  }
}
